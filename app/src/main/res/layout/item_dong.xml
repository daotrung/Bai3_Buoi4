<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10sp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_File"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/icon_file"
        android:layout_marginTop="5sp"
        android:layout_marginStart="10sp"

        android:layout_width="50dp"
        android:layout_height="50dp"/>
    <TextView
        android:id="@+id/txtTitle"
        app:layout_constraintStart_toEndOf="@id/img_File"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15sp"
        android:text="Video"
        android:textSize="15sp"
        android:textColor="#D2000000"
        android:layout_marginLeft="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/imgEdit"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toEndOf="@id/img_File"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="250sp"
        android:layout_marginTop="15sp"
        android:src="@drawable/pencil_icon"/>
    <ImageView
        android:id="@+id/imgRemove"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toEndOf="@id/imgEdit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="15sp"
        android:src="@drawable/remove_icon"/>
    <TextView
        android:background="#A7FFEB"
        android:layout_marginTop="5sp"
        android:id="@+id/txtGuiLine"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="7sp"
        app:layout_constraintTop_toBottomOf="@id/img_File"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>